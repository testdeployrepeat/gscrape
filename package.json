{
  "name": "gscrape",
  "version": "2.0.0",
  "description": "Fast Google Maps Business Scraper",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "node scripts/download-chrome.js",
    "prebuild": "node scripts/verify-icon.js",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Rob De Guia",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@puppeteer/browsers": "^2.4.1",
    "csv-parser": "^3.0.0",
    "electron-updater": "^6.1.7",
    "papaparse": "^5.4.1",
    "puppeteer-core": "^24.27.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "build": {
    "appId": "com.gscrape.app",
    "productName": "gscrape",
    "publish": {
      "provider": "github",
      "owner": "testdeployrepeat",
      "repo": "gscrape"
    },
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "gscrape",
      "include": "scripts/clean_uninstall.nsh",
      "installerSidebar": null,
      "uninstallerSidebar": null,
      "license": "build/disclaimer.txt",
      "warningsAsErrors": false
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "files": [
      "**/*",
      "!data/scraped_history.json",
      "!exports/**/*"
    ],
    "asarUnpack": [
      "chrome/**/*"
    ],
    "extraResources": [
      {
        "from": "chrome",
        "to": "chrome",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}